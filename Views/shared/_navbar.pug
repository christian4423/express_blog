nav.navbar.navbar-light(style="background-color: #eff2fd;")
    div.container
        div.navbar-header
            button.navbar-toggle.collapsed(type="button" data-toggle="collapse" data-target="#collapse1" aria-expanded="false")
                span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar
            a.navbar-brand(href="/")= page_title
        div.collapse.navbar-collapse(id="collapse1")
            ul.nav.navbar-nav
                li#home
                    a(href="/") Home 
                        span.sr-only (current)
                li#products
                    a(href="/products") Products 
                        span.sr-only (current)
            ul.nav.navbar-nav.navbar-right
                li.dropdown                    
                    a.dropdown-toggle(href="#" data-toggle="dropdown" role="button", aria-haspopup="true" aria-expanded="false")= `Hello ${ViewBag.name}!`
                    ul.dropdown-menu
                        if(ViewBag.name == 'Guest')
                            li
                                a(href="/users/signup") Sign up
                                    span.glyphicon.glyphicon-pencil.ns-icon
                            li
                                a(href="/users/login") Login
                                    i.fa.fa-handshake-o.ns-icon(aria-hidden="true")
                        else
                            li
                                a(href="/users/account") Account
                                    i.fa.fa-cog.ns-icon(aria-hidden="true")
                                a(href="/users/logout") Logout
                                    i.fa.fa-hand-spock-o.ns-icon(aria-hidden="true")