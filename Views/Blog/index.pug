extends ../layout2.pug

block body_content
    div.row
        div.col-xs-12
            ol.breadcrumb
                li
                    a(href="/")
                        span="Home"
                li.active
                    span="My Blogs"
    div.row
        div.col-xs-12
            h3="My Feed"  
    include ../shared/blogs/_blogs

    div.modal.fade#confirm_modal(tabindex="-1" role="dialog" style="display:none;")
        div.modal-dialog(role="document")
            div.modal-content
                div.modal-header
                    button.close(type="button" data-dismiss="modal" aria-label="Close")
                        span(aria-hidden="true")!= "&times;"
                    h4.modal-title= "Are you sure?"
                div.modal-body
                    div.row
                        div.col-xs-6.text-right
                            div.btn.btn-success(data-confirm="false")
                                i.fa.fa-times
                        div.col-xs-6.text-left(data-confirm="true")
                            div.btn.btn-danger