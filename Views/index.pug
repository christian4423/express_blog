extends layout.pug

block body_content
    div.row
        div.col-xs-10.col-sm-8.col-md-6
            h3= "Dashboard"
    hr
    div.row
        div.col-xs-10.col-sm-8.col-md-6
            form(action="/blog/postBlog" method="post")
                input(name="user_id" type="hidden" value=Model.user_id)
                div.form-group                                
                    input(name="subject" placeholder="Subject" type="text").form-control
                div.form-group                
                    textarea(name="body" placeholder="Body").form-control
                div.form-group                
                    input(name="tags" placeholder="Tags" type="text").form-control
                div.form-group                                    
                    button(type="submit" class="btn btn-success")= "POST!"
    hr